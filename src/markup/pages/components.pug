extends ../layouts/library.pug

block title
  title Components Page

block main-styles
  link(href='../../styles/components.less' rel='stylesheet')

block body
  section.section
    h2.section__title checkbox buttons
    .section__row
      fieldset.section__fieldset
        +checkbox('Можно курить')(
          name='permission'
          value='smoke'
        )
        +checkbox('Можно с&nbsp;питомцами')(
          name='permission'
          value='pets'
        )
        +checkbox('Можно пригласить гостей (до&nbsp;10&nbsp;человек)')(
          name='permission'
          value='guests'
        )

  section.section
    h2.section__title radio buttons
    .section__row
      +stateful-input('Мужчина')(id='radio-button-sex-man' type='radio' name='sex' value='man' checked)
      +stateful-input('Женщина')(id='radio-button-sex-woman' type='radio' name='sex' value='woman')


  section.section
    h2.section__title toggle
    .section__row
      +stateful-input('Получать спецпредложения', 'type_toggle')(id='toggle-mailing' type='checkbox' name='mailing' value='on')

  section.section
    h2.section__title like button
    .section__row
      +stateful-input(
        'like button',
        'type_like-button'
      )(
        id='like-button'
        type='checkbox'
        name='like-button'
        value='on'
      )

  section.section
    h2.section__title rate button
    .section__row
      +rating()(id='rating' name='rating')

  section.section
    h2.section__title rich checkbox buttons
    .section__row
      fieldset.section__fieldset
        +checkbox(
          'Широкий коридор',
          '',
          'Ширина коридоров в&nbsp;номере не&nbsp;менее 91&nbsp;см.'
        )(
          name='accessibility'
          value='wide-corridor'
        )
        +checkbox(
          'Помощник для инвалидов',
          '',
          'На&nbsp;1&nbsp;этаже вас встретит специалист и&nbsp;проводит до&nbsp;номера.'
        )(
          name='accessibility'
          value='assistant'
        )

  section.section
    h2.section__title bullet list
    .section__row
      +bullet-list([
        'Нельзя с&nbsp;питомцами',
        'Без вечеринок и&nbsp;мероприятий',
        'Время прибытия&nbsp;&mdash; после 13:00, а&nbsp;выезд до&nbsp;12:00'
      ])

  section.section
    h2.section__title text field
    .section__row
      +input-field(type='text' name='text' placeholder='Text' maxlength='24' required)

  section.section
    h2.section__title masked text field
    .section__row
      +input-field(class='js-input-masked-date' type='text' name='text-masked' placeholder='ДД.ММ.ГГГГ' maxlength='24' required)

  section.section
    h2.section__title dropdown
    .section__row
      +dropdown-field({
        optionNames: ['Спальни', 'Кровати', 'Ванные комнаты'],
      })(
        type='text'
        name='dropdown-field-input'
        id='dropdown-field-input'
        placeholder='Выберите удобства'
        maxlength='24'
        autocomplete='off'
        required
      )

  section.section
    h2.section__title datepicker
    .section__row
      +datepicker('datepicker')

  section.section
    h2.section__title filter date dropdown
    .section__row
      +input-field('dropdown')(
        class='js-input-masked-date'
        type='text'
        name='date-filter'
        id='date-filter'
        placeholder='Выберите дату'
        maxlength='24'
        autocomplete=''
        spellcheck=''
        required
      )

  section.section
    h2.section__title subscription field
    .section__row
      +input-field('subscription')(type='email' name='email' id='email' placeholder='Your email address' maxlength='24' autocomplete='email' spellcheck='false' required)

  section.section
    h2.section__title expandable checkbox list
    .section__row
      include ../../blocks/common.blocks/checkbox-dropdown/checkbox-dropdown.pug

  section.section
    h2.section__title cell-blocks
    .section__row
      +cell-block('Комфорт', 'Шумопоглощающие стены', 'insert_emoticon')
      +cell-block('Удобство', 'Окно в&nbsp;каждой из&nbsp;спален', 'location_city')

  section.section
    h2.section__title comments
    .section__row
      include ../../blocks/common.blocks/comment/comment.pug

  section.section
    h2.section__title range slider
    .section__row
      include ../../blocks/common.blocks/range-slider/range-slider.pug

  section.section
    h2.section__title buttons
    .section__row
      +button('click me', 'main')(href='#').section__button
      //- button with hover state
      +button('click me', 'main')(href='#').section__button
    .section__row
      +button('click me', 'secondary')(href='#').section__button
      //- button with hover state
      +button('click me', 'secondary')(href='#').section__button
    .section__row
      +button('click me')(href='#').section__button
      +button('click me', 'reset')(href='#').section__button
    .section__row
      +button('перейти к оплате', 'full-width').section__button

  section.section
    h2.section__title pagination
    .section__row
      include ../../blocks/common.blocks/pagination/pagination.pug

  section.section.section_width_box
    .section__row
      h2.section__title search box
      include ../../blocks/common.blocks/search-box/search-box.pug

  section.section.section_width_box
    .section__row
      h2.section__title registration box
      include ../../blocks/common.blocks/registration-box/registration-box.pug

  section.section.section_width_box
    .section__row
      h2.section__title calculation box
      include ../../blocks/common.blocks/calculation-box/calculation-box.pug

  section.section.section_width_box
    .section__row
      h2.section__title entry box
      include ../../blocks/common.blocks/entry-box/entry-box.pug

  section.section.section_width_inner-box
    .section__row
      h2.section__title room box
      include ../../blocks/common.blocks/room-box/room-box.pug
