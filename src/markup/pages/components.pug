extends ../layouts/library.pug

block title
  title Components Page

block main-styles
  link(href='../../styles/components.less' rel='stylesheet')

block body
  section.section
    h2.section__title checkbox buttons
    .section__row
      include ../../blocks/common.blocks/permission-form/permission-form.pug

  section.section
    h2.section__title radio buttons
    .section__row
      include ../../blocks/common.blocks/radio-button/radio-button.pug

  section.section
    h2.section__title toggle
    .section__row
      include ../../blocks/common.blocks/toggle/toggle.pug

  section.section
    h2.section__title like button
    .section__row
      include ../../blocks/common.blocks/like-button/like-button.pug

  section.section
    h2.section__title rate button
    .section__row.section__rate-buttons
      include ../../blocks/common.blocks/rate-button/rate-button.pug

  section.section
    h2.section__title rich checkbox buttons
    .section__row
      include ../../blocks/common.blocks/rich-checkbox/rich-checkbox.pug

  section.section
    h2.section__title bullet list
    .section__row
      include ../../blocks/common.blocks/bullet-list/bullet-list.pug

  section.section
    h2.section__title subscription field
    .section__row
      include ../../blocks/common.blocks/subscription-field/subscription-field.pug

  section.section
    h2.section__title range slider
    .section__row
      include ../../blocks/common.blocks/range-slider/range-slider.pug

  section.section
    h2.section__title buttons
    .section__row
      +button('click me', 'main')(href='#').section__button
      //- button with hover state
      +button('click me', 'main')(href='#').section__button
    .section__row
      +button('click me', 'secondary')(href='#').section__button
      //- button with hover state
      +button('click me', 'secondary')(href='#').section__button
    .section__row
      +button('click me')(href='#').section__button
      +button('click me', 'reset')(href='#').section__button
    .section__row
      +button('перейти к оплате', 'full-width').section__button

  section.section
    h2.section__title pagination
    .section__row
      include ../../blocks/common.blocks/pagination/pagination.pug
