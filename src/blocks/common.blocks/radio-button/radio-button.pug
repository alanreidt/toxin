//- Все примеси в этом файле должны начинаться c имени блока (radio-button)
mixin radio-button(labelText, mods)

  //- Принимает:
        mods {string} — список модификаторов
        labelText {string} — текст для label'а кнопки

  //- Вызов:
        +radio-button('Мужчина') — radio-button с текстом мужчина
  -
    // список модификаторов
    var allMods = '';
    if(typeof(mods) !== 'undefined' && mods) {
      var modsList = mods.split(',');
      for (var i = 0; i < modsList.length; i++) {
        allMods = allMods + ' button_' + modsList[i].trim();
      }
    }

  .radio-button
    label.radio-button__label(for!=attributes.id)
      input.radio-button__input&attributes(attributes)
      span.radio-button__text= labelText
